# 应用环境配置可选值: development, testing, production
FLASK_CONFIG=development
# Flask应用密钥 (生产环境必须修改为强密钥)
SECRET_KEY=your-secret-key-here
# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG
# 是否启用调试模式
DEBUG=true
# 上传文件保存目录
UPLOAD_FOLDER=uploads
# 允许的文件扩展名(逗号分隔)
ALLOWED_EXTENSIONS=xlsx,xls
# 日志文件路径
LOG_FILE=logs/app.log
# 日志文件最大大小(字节)
LOG_MAX_BYTES=10485760
# 日志文件备份数量
LOG_BACKUP_COUNT=5
# 日志格式
LOG_FORMAT=%(asctime)s %(levelname)s %(name)s %(message)s
# 日期格式
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S
# 算法方法：adaptive(自适应) 或 fixed(固定阈值)
RECURRING_EXPENSE_METHOD=adaptive
# 百分位数阈值，选择前25%的商家
RECURRING_EXPENSE_PERCENTILE=35
# Z-score阈值，选择Z-score>1.0的商家
RECURRING_EXPENSE_ZSCORE_THRESHOLD=0.8
# 最低综合得分阈值
RECURRING_EXPENSE_MIN_SCORE=50.0